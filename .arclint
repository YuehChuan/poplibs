{
  "linters": {
    "clang-format": {
      "type": "clang-format",
      "exclude": [
        "(^examples/xgraph)",
        "(^lib/popfloat/codelets/(Cast.+.h)$)"
      ],
      "include": "(\\.(c|cpp|C|cc|c\\+\\+|cxx|h|hpp)$)"
    },
    "chmod": {
      "type": "chmod"
    },
    "merge-conflict": {
      "type": "merge-conflict"
    },
    "text": {
      "type": "text",
      "exclude": "(\\.(c|cpp|C|cc|c\\+\\+|cxx|h|hpp|py)$)",
      "severity": {
        "1": "autofix",
        "2": "disabled",
        "3": "disabled",
        "4": "autofix",
        "5": "error",
        "6": "disabled",
        "7": "disabled",
        "8": "autofix"
      }
    },
    "spelling": {
      "type": "spelling"
    }
  }
}
